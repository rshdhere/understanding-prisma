echo "🚀 Pre-commit checks starting..."
npm run format || {
  echo "❌ Prettier failed. Please check for syntax errors in your files."
  exit 1
}

echo "🔍 Running ESLint with auto-fix on entire project..."
npm run lint:fix || {
  echo "❌ ESLint failed. Fix errors before committing."
  exit 1
}

echo "✅ Code formatted & linted successfully!"